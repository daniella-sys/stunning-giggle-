const nums5 = [2, 3, 4, 5, 6];
// Знайди добуток тільки парних чисел
// Очікуваний результат: 48 (2×4×6)
const adioihdhsa = nums5.reduce(function(accumulator, element){
if(element % 2 === 0){
  return accumulator * element;
}else{
  return accumulator;
}
}, 1);
console.log(adioihdhsa);

const scores = [85, 90, 78, 92, 88];
// Знайди середнє арифметичне через reduce
// Очікуваний результат: 86.6
// Підказка: тобі потрібно сума і кількість
const ll = scores.reduce(function(accumulator, element){
const aa = accumulator + element;
const hh = 4;
return aa / hh;
}, 0);
console.log(ll);
//Якщо додаю то 0 а якщо множити 1

const numbers88 = [11, 12, 13, 14, 15, 16, 17];
// Знайди КІЛЬКІСТЬ НЕПАРНИХ чисел через reduce
// Підказки:
// 1. Початкове значення для підрахунку = 0
// 2. Непарне число → num % 2 !== 0
// 3. Коли знаходиш непарне → додай 1 до акумулятора
// Очікуваний результат: 4 (11, 13, 15, 17)
const aq = numbers88.reduce(function(accumulator, element){
if(element % 2 !== 0){
  return accumulator + 1;
}else{
  return '';
}
}, 0);
console.log(aq);

const mixed = [-5, 10, -3, 8, 2, -1, 7];
// Знайди СУМУ тільки ДОДАТНИХ чисел
// Підказки:
// 1. Початкове значення для додавання = 0
// 2. Додатнє число → num > 0
// 3. Додай саме число до акумулятора
// Очікуваний результат: 27 (10+8+2+7)
const ng = mixed.reduce(function(accumulator, element){
  if(element > 0){
    return element + accumulator;
  }else{
    return '';
  }
}, 0);
console.log(ng);

const words = ["яблуко", "банан", "апельсин", "виноград"];
// Знайди ЗАГАЛЬНУ КІЛЬКІСТЬ ЛІТЕР у всіх словах
// Підказки:
// 1. Початкове значення = 0
// 2. Кожне слово має .length (довжину)
// 3. Додай довжину поточного слова до акумулятора
// Очікуваний результат: 24 (6+5+8+5)
const fg = words.reduce(function(accumulator, element){
return element.length + accumulator;
}, 0);
console.log(fg);

const num = [34, 12, 56, 8, 23, 45];
// Знайди НАЙМЕНШЕ число через reduce
// Підказки:
// 1. Початкове значення = Infinity (дуже велике число)
// 2. Порівняй поточне число з акумулятором
// 3. Поверни менше з них
// Очікуваний результат: 8
const vg = num.reduce(function(accumulator, element){
return Math.min(accumulator, element);
}, 0);
console.log(vg);

const data = [5, 12, 8, 3, 10];
// Перевір, чи ВСІ числа в масиві додатні
// Підказки:
// 1. Початкове значення = true (спочатку вважаємо, що всі додатні)
// 2. Якщо зустрічаємо num <= 0 → змінюємо акумулятор на false
// 3. Інакше залишаємо акумулятор без змін
// Очікуваний результат: true
const qw = data.reduce(function(accumulator, element){
if(element <= 0){
  return true;

}else{
  return false;
}
});
console.log(qw);

const ns = [1, 3, 5, 6, 9, 12, 14];
const yt = ns.reduce(function(accumulator, element){
  if(element % 2 !== 0){
    return accumulator + element;
  }else{
    return accumulator;
  }
}, 0);
console.log(yt);

const words1 = ["ананас", "банан", "абрикос", "яблуко", "апельсин"];
// Результат: 3 ("ананас", "абрикос", "апельсин")
// Підказка: word[0] дає першу букву
const cv = words1.reduce(function(accumulator, element){
  return element[0];
});
console.log(cv);

const test = [1, 5, 2, 9, 3];
// Знайди максимум самостійно
const fq = test.reduce(function(accumulator, element){
if(element > accumulator){
  return element;
}else{
  return accumulator;
};
});
console.log(fq);

const words88888 = ["кіт", "собака", "жирафа", "слон", "крокодил"];
const oopo = words88888.reduce(function(accumulator, element){
  return element.length;
});

const total = numbers.reduce(function(accumulator, element) {
    return accumulator + element;
}, 0); // ← Додати початкове значення 0

console.log(total); // 15
const nums = [2, 5, 8, 10, 3, 6];
// Використай reduce, щоб знайти суму тільки парних чисел
// Очікуваний результат: 26 (2+8+10+6)
const geghd = nums.reduce(function(accumulator, element){
if(element % 2 === 0){
  return accumulator + element;
}else{
  return accumulator;
}
}, 0);
const arr = [1, 2, 3, 4, 5, 6, 7, 8];
// Порахуй кількість парних чисел через reduce
// Очікуваний результат: 4   
const fjjkfkjf = arr.reduce(function(accumulator, element) {
if(element % 2 === 0){
  return accumulator + element;
}else{
  return accumulator;
}
}, 0);
console.log(fjjkfkjf); ///1

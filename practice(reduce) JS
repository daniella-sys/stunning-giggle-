const numbers = [1, 2, 3, 4];
// Знайди суму квадратів чисел: 1² + 2² + 3² + 4²
// Очікуваний результат: 30
const gg = numbers.reduce(function(accumulator, element){
return accumulator + (element * element),  1}); 

console.log(numbers);

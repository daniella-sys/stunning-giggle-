const тварини = ['кіт', 'собака', 'хомʼяк'];
// Вивести: "Тварина: кіт", "Тварина: собака", "Тварина: хомʼяк"
// Увага: не називай параметр "тварини"
тварини.forEach((тварина, index) => {
let cc = index + 1;
console.log("Тварина" + ":" + cc + тварина);
});

const product = ['молоко', 'хліб', 'яйця'];
// Вивести: "Купую: молоко", "Купую: хліб", "Купую: яйця"
// Увага: додай пробіл після двокрапки
product.forEach((producta, index) => {
let hhl = index + 1;
console.log("Buy" + ":" + "" + hhl + producta);
});

const вік = [15, 18, 22, 17, 25];
// Вивести тільки повнолітніх (>= 18)
// Увага: порівнюй значення (element), не індекс
вік.forEach((age, index) => {
if(age >= 18){
    console.log("tes");
}else{
    console.log("no");
}
});
const numbers8 = [10, 11, 12, 13, 14, 15];
// Вивести тільки парні числа
// Увага: перевіряй число на парність, не індекс
numbers8.forEach((number, index) => {
  if(number % 2 === 0){
    console.log(number);
  }else{
    console.log();
  }
});



const кольори = ['червоний', 'зелений', 'синій'];

// Завдання: Вивести "Колір: червоний", "Колір: зелений", "Колір: синій"
// Правила:
// 1. Назви параметр не так само як масив
// 2. Додай пробіл після двокрапки
// 3. Не використовуй індекс (він не потрібен)

// Твій код тут:
кольори.forEach((color, index) => {
 console.log("Color" + ":" + "" + color);
});

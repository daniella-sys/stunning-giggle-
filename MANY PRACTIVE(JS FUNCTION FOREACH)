const дні = ['понеділок', 'вівторок', 'середа'];
// Виведи "День 1: понеділок", "День 2: вівторок"...
дні.forEach((дні, index) => {  //❌ виправила
    let day = index + 1;
  console.log("Day" + day + ":" + дні);
});

const оцінки = [85, 92, 78, 95];
// Виведи "Оцінка 1: 85 балів", "Оцінка 2: 92 бали"...
оцінки.forEach((оцінка, index) => {
    let grade = index + 1;  //❌❌ але я виправила
    console.log("Оцінка" + grade + ":" + оцінка + "балів");
});

const літери = ['A', 'B', 'C', 'D'];

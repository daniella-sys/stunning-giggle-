const days = ["Понеділок", "Вівторок", "Середа", "Четвер", "П'ятниця", "Субота", "Неділя"];

// 1. Створюємо функцію, яка повертає випадковий день
function getRandomDay() {
    // Отримуємо випадковий індекс від 0 до 6
    const randomIndex = Math.floor(Math.random() * days.length);
    // Повертаємо день з масиву
    return days[randomIndex];
}

// 2. Створюємо 3 змінні, викликаючи функцію
const day1 = getRandomDay();
const day2 = getRandomDay();
const day3 = getRandomDay();

// 3. Виводимо результат
console.log("Перший день:", day1);
console.log("Другий день:", day2);
console.log("Третій день:", day3);

const fruits = ["Яблуко", "Банан", "Апельсин", "Полуниця", "Ананас", "Манго", "Ківі"];

// Створи функцію getRandomFruit()
// Створи 3 змінні fruit1, fruit2, fruit3
// Виведи: "Фрукти: [fruit1], [fruit2], [fruit3]"
function getRandomFruit(){
    const random_b = Math.floor(Math.random() * fruits.length);
    return fruits[random_b];
}
const fru1 = getRandomFruit();
const fru2 = getRandomFruit();
const fru3 = getRandomFruit();

console.log("Перший фрукт:", fru1);
console.log("Другий фрукт:", fru2);
console.log("Третій фрукт:", fru3);

const colors = ["Червоний", "Синій", "Зелений", "Жовтий", "Фіолетовий", "Помаранчевий", "Рожевий"];

// Створи функцію getRandomColor()
// Створи 4 змінні color1, color2, color3, color4
// Виведи кожен колір в окремому console.log
function getRandomColor(){
    const random_j = Math.floor(Math.random() * colors.length);
    return colors[random_j];
}
const color1 = getRandomColor();
const color2 = getRandomColor();
const color3 = getRandomColor();
const color4 = getRandomColor();

console.log("Перший колір:", color1);
console.log("Другий колір:", color2);
console.log("Третій колір:", color3);
console.log("Четвертий колір:", color4);

const dishes = ["Борщ", "Пельмені", "Вареники", "Котлети", "Сало", "Голубці", "Олів'є"];

// Створи функцію getRandomDish()
// Створи 3 змінні dish1, dish2, dish3
// Виведи: "Сьогодні на обід: [dish1], на вечерю: [dish2], на завтра: [dish3
function getRandomDish(){
    const dsih_hshsh = Math.floor(Math.random() * dishes.length);
    return dishes[dsih_hshsh];
}
//викликаємо функцію
const dish1 = getRandomDish();
const dish2 = getRandomDish();
const dish3 = getRandomDish();

console.log("Сьогодні на обід:", dish1);
console.log("на вечерю:", dish2);
console.log("на завтра: ", dish3);

const drinks = ["Кава", "Чай", "Сік", "Вода", "Лимонад", "Молоко", "Какао"];

// Створи функцію getRandomDrink()
// Створи 4 змінні drink1, drink2, drink3, drink4
// Виведи: "Напій 1: [drink1]", "Напій 2: [drink2]" тощо
function getRandomDrink(){
    const ghehj = Math.floor(Math.random() * drinks.length);
    return drinks[ghehj];
}

const drink1 = getRandomDrink();
const drink3 = getRandomDrink();
const drink2 = getRandomDrink();
const drink4 = getRandomDrink();

console.log("Перший напій:", drink1);
console.log("Другий напій:", drink2);
console.log("Третій напій:", drink3);
console.log("Четвертий напій:", drink4);

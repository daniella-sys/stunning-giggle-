let value1 = 12.345;   // → 12.35
let value_1 = Math.round(value1 * 100) / 100;
console.log(value_1);
let value2 = 9.876;    // → 9.88
let value_2 = Math.round(value2 * 100) / 100;
console.log(value_2);
let value3 = 3.14159;  // → 3.14
let value_3 = Math.round(value3 * 100) / 100;
console.log(value_3);
//до одного знаку округлити
let temp1 = 36.67;   // → 36.7
let temp1_1 = Math.round(temp1 * 10) / 10;
console.log(temp1_1);
let temp2 = 25.32;   // → 25.3
let temp2_2 = Math.round(temp2 * 10) / 10;
console.log(temp2_2);
let temp3 = 18.555;  // → 18.6
let temp3_3 = Math.round(temp3 * 10) / 10;
console.log(temp3_3);

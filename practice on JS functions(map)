const замовлення = [
  { товар: 'Книга', кількість: 2, ціна: 150 },
  { товар: 'Олівець', кількість: 10, ціна: 5 },
  { товар: 'Зошит', кількість: 5, ціна: 30 }
];

const новіЗамовлення = замовлення.map(замовлення => {
  return {
    товар: замовлення.товар,
    кількість: замовлення.кількість,     ///!!!!!!!!!!!!!!!!!!!!!!!!!!!
    ціна: замовлення.ціна,
    загальна: замовлення.кількість * замовлення.ціна
  };
});

console.log(новіЗамовлення);

const студенти88 = [
  { імʼя: 'Анна', оцінка: 85 },
  { імʼя: 'Петро', оцінка: 92 },
  { імʼя: 'Марія', оцінка: 78 },
  { імʼя: 'Олег', оцінка: 60 }
];
// Отримати масив об'єктів з додатковим полем "статус":
// >=90 - "відмінно", >=75 - "добре", <75 - "потрібно покращити"
const статус = студенти88.map(студент => {
    if(студент.оцінка >= 90) {
        return "відмінно";
    }else if(студент.оцінка >= 75){
       return "Добре";
    }else{
        return "потрібно покращити";
    }
});

const продукти = [
  { назва: 'Молоко', ціна: 40 },
  { назва: 'Хліб', ціна: 25 },
  { назва: 'Яйця', ціна: 5 }
];
// Отримати масив цін: [40, 25, 5]
// Увага: працюй з КОЖНИМ об'єктом в масиві через map()
const newproduct = продукти.map(продукт => {
    return {
    назва: продукти.назва,
    ціна: продукти.ціна,
    загальна: продукти.назва * продукти.ціна
};
});
console.log(newproduct);


const студентиdegh = [
  { імʼя: 'Анна', оцінка: 85 },
  { імʼя: 'Петро', оцінка: 92 },
  { імʼя: 'Марія', оцінка: 78 }
];
// Перевірити, чи оцінка вища за 80: [true, true, false]
// Увага: if(студент.оцінка > 80), не if(студент > 80)
const xxx = студентиdegh.map(студент => {
    if(студент.оцінка > 80){
        return true;
    }else{
        return false;
    }
});
const товари887 = [
  { назва: 'Телефон', вНаявності: true },
  { назва: 'Ноутбук', вНаявності: false },
  { назва: 'Навушники', вНаявності: true }
];
// Отримати масив: ['Є', 'Немає', 'Є']
// Увага: перевіряй товар.вНаявності, не товар
const v = товари887.map(товар => {
    const vnauavnosti = товар.вНаявності ? "внаявності" : "Немає";
    return vnauavnosti;
})


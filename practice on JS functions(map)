const jjjj = [1, 2, 3, 4];
const hjdj = jjjj.map(num => num + "кг");

const lll = [10, 20, 30];   //
const  qq = lll.map(num => num * 10);

 const animals = ['кіт', 'собака', 'птах'];
 const jsjj = animals.map(num => num.toUpperCase);

const aaa = [5, 10, 15];
const hdjhd = aaa.map(num => num * num);

const слова = ['яблуко', 'банан', 'вишня'];
// Зробити всі слова великими літерами
// Очікується: ['ЯБЛУКО', 'БАНАН', 'ВИШНЯ']
const hdjhdj = слова.map(num => num.toUpperCase());

const імена = ['анна', 'петро', 'марія'];
// Зробити першу літеру великою, решту маленькими
// Підказка: 'анна'.charAt(0).toUpperCase() + 'анна'.slice(1).toLowerCase()
const name = імена.map(num => num.charAt(0).toUpperCase() + імʼя.slice(1).toLowerCase());

const числа2 = [3, 4, 5];
// Отримати куби чисел (число³)
// Очікується: [27, 64, 125]
const number77 = числа2.map(num => num * num * num);

const числа5 = [2, 3, 4];
// Отримати числа в степені 4 (число⁴)
const numberhjhj = числа5.map(num => num * num * num * num);

const qqqqk = ['яблуко', 'банан', 'вишня'];
// Отримати масив довжин слів
const yy = qqqqk.map(num => num.length);



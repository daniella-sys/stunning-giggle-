/поле для пошуку
const qq = document.getElementById('passwordInput');
const oo = document.getElementById('checkPasswordBtn');
const aa = document.getElementById('passwordResult');
//обробник події для кнопки
oo.addEventListener('click', function(){
    const password = qq.value;
    if(password.lenght >= 8){
aa.textContent = "Надійний пароль";
    }else{
        aa.textContent = 'Пароль закороткий';

    }
});//тому що перевірка для пароля

//поле для пошуку
const ss = document.getElementById('emailInput');
const jj = document.getElementById('checkEmailBtn');
const ff = document.getElementById('emailResult');
//обробник події
jj.addEventListener('click', function(){
const emailInput = ss.value;
if(emailInput.includes('@')){
    ff.textContent = 'Email валідний';
    ff.className = "valid";// вказати клас елемента
}else{
    ff.textContent = "Email невалідний (має містити @)"
}
console.log(ff);
});

const mm = document.getElementById('colorBtn');
const dd = document.getElementById('colorBox');
//обробник події 
mm.addEventListener('click', function(){
 dd.style.backgroundColor = 'coral';
});

const ii = document.getElementById('taskInput');
const gg = document.getElementById('addTaskBtn');
const nn = document.getElementById('errorMessage');
const xx = document.getElementById('taskList');
//
gg.addEventListener('click', function(){
//отримали текст з поля
    const taskInput = ii.value;
    if(ii.value !== ""){
        const ul = document.createElement('li');
        ul.textContent = taskInput;
        ul.classList.add('task-item');
        xx.appendChild(ul);
        ii.value = '';

    }else{
        nn.textContent = 'Будь ласка, введіть завдання!'
    }

});


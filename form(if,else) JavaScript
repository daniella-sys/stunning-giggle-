const yy = document.getElementById('todoInput');
const jghg = document.getElementById('addTodoBtn');
const hjgfd = document.getElementById('todoMessage');
const ppop = document.getElementById('todoList');
//
jghg.addEventListener('click', function(){
    const howareyou = yy.value;
    if(yy.value !== ''){
        const create = document.createElement('div');
        create.textContent = howareyou;
        create.classList.add('task');
        ppop.appendChild(create);
        //очистити поле
        create.value = '';
        message.textContent = 'Справу додано!';
    }else{
      message.textContent = 'Введіть справу';
    }
})

const uhfjg = document.getElementById('createTasksBtn');
const vjkvjk = document.getElementById('tasksList');
for(let i = 1; i <= 5; i++){
    const fdsfdgf = document.createElement('div');
    fdsfdgf.textContent = 'Завдання'+i;
    if(i === 2){
        fdsfdgf.classList.add('completed');
    }else if(i === 4){
        fdsfdgf.classList.add('completed');

    }
    uhfjg.addEventListener('click', function(){
        fdsfdgf.classList.add('completed');
        vjkvjk.appendChild(fdsfdgf);
    });
}

const cdsh = document.getElementById('showStudentsBtn');
const aa = document.getElementById('studentsList');
//Завдання:

//Створи 6 учнів (цикл 1-6)

//Текст: "Учень X"

//ЯКЩО оцінка = 12 → "Відмінник" (клас excellent)

//ЯКЩО оцінка = 10 або 11 → "Хорошист" (клас good)

//ІНАКШЕ → "Успішний" (клас satisfactory)
for(let i = 1; i <= 6; i++){
    const fjjjh = document.createElement('div');
    fjjjh.textContent = 'Учень X';
if(i === 12){
    fjjjh.textContent = "Відмінник";
    fjjjh.classList.add('excellent');
}else if(i === 10){
    fjjjh.textContent = "Хорошист";
    fjjjh.classList.add('good');
}else if(i === 11){
    fjjjh.textContent = "Хорошист";
    fjjjh.classList.add('good');
}else{
    fjjjh.textContent = "Успішний";
    fjjjh.classList.add('satisfactory');

}
aa.appendChild(fjjjh);
}
//id  <button id="createGalleryBtn">Створити галерею</button>
 //   <div id="galleryContainer"></div>
 //завдання Створи красиву галерею для знімка екрана:

//При кліку на кнопку створи 9 карток зображень (цикл 1-9)

//Кожна картка має текст: "Зображення X"

//ЯКЩО номер = 3, 6, 9 → додай клас "featured" (виділені)
//вивести інформацію
const njjhj = document.getElementById('createGalleryBtn');
const hdhjd = document.getElementById('galleryContainer');
njjhj.addEventListener('click', function(){
for(let i =1; i <= 9;i++){
    const rdrd = document.createElement('div');
    rdrd.textContent = 'Зображення Х';
    if(i === 3){
        rdrd.classList.add('featured');

    }else if(i === 6){
        rdrd.classList.add('featured');
    }else if(i === 9){
        rdrd.classList.add('featured');
    }
    hdhjd.appendChild(rdrd);
}
});

const gg = document.getElementById('createUsersBtn');
const ll = document.getElementById('usersList');

gg.addEventListener('click', function(){
    for(let i = 1; i <= 6; i++){
        const addElement = document.createElement('div');
        addElement.textContent = "Користувач " +i;
        if(i = 1){
            addElement.classList.add('admin');
        }else{
            addElement.classList.add('user-card');
        }
        ll.appendChild(addElement);
    }
});

const lo = document.getElementById('createCalendarBtn');
const nn = document.getElementById('calendar');

lo.addEventListener('click', function(){
for( let i = 1; i <= 7; i++){
const sevenElements = document.createElement('div');
sevenElements.textContent = "День "+i;
if(i >= 6) { // ← Вихідні (6, 7)
            sevenElements.classList.add('weekend');
        } else { // ← Будні (1-5)
            sevenElements.classList.add('weekday');
        }
        
}
});

const generalcalendar = document.getElementById('generateCalendarBtn');
const oo = document.getElementById('calendarContainer');
const resu = document.getElementById('electedDay');
generalcalendar.addEventListener('click', function(){
for(let i = 1; i <= 7; i++){
    const day = document.createElement('div');
    if(i >= 5){
        day.classList.add('weekend');

    }else if(i === 3){
        day.classList.createElement('has-event');
    }else if(i === 1){
        day.classList.createElement('today');
    }
// Додаємо обробник кліку на кожен день
        day.addEventListener('click', function() {
            resu.textContent = 'Ви обрали день ' + i;
        });
        
        oo.appendChild(day);
}
});

const jj = document.getElementById('generateStarsBtn');
const ss = document.getElementById('starsContainer');
const mm = document.getElementById('ratingResult');
jj.addEventListener('click', function(){
for(let i = 1; i <= 5; i++){
    const element = document.createElement('span');
    element.textContent = '⭐';
    element.addEventListener('click', function() {
            mm.textContent = 'Ваша оцінка: ' + i + '/5';
        });
        
        ss.appendChild(element); // ← Додаємо до контейнера

}
});


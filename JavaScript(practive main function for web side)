});


//3
const foundfive = document.getElementById('changeText');
//edit text on new
foundfive.textContent = 'Hello!';
//change color
foundfive.style.color = 'red';


//4
const item = document.getElementById('myList');
//create a new element
const create_elem = document.createElement('li');
//create a text for li
create_elem.textContent = 'Перший пункт';
//add in li
item.li.appendChild(create_elem); //Ми додаємо створений елемент (create_elem) до списку (item), а не навпаки.

//5
const yrg = document.getElementById('colorBtn');
//під час кліку має вспливати текст 
yrg.addEventListener('click', function() {
    alert('Вітаю!');
    yrg.textContent = 'Натиснуто!';  // Змінюємо текст кнопки тут
});
//addEventListener додається до конкретного елемента (yrg), не до всього документа

//Зміну тексту потрібно робити всередині функції обробника

//6 
const ghh = document.getElementById('styleBox');
//change text 
ghh.textContent = 'Оновлений текст';
//I need to change color text
ghh.style.color = 'blue';
//background change
ghh.style.background = 'pink'; 

//7
const qq = document.getElementById('content');

//found id
//поле для введення 
const found = document.getElementById('mainTitle');
//for element with class
const foundone = document.querySelector('.subtitle');
//for create element div
const create = document.createElement('div');
//add text
create.textContent = 'Новий блок';
//add div to body
//тому що сказано додати до body
mainTitle.body.appendChild(create);
 
//2
const foundthree = document.getElementById('actionBtn');

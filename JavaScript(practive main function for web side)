ll.textContent = 'Мій заголовок';
//li add to id
qq.appendChild(ll);

//8
const rr = document.getElementById('toggleBtn');
//під час кліку повинна зявитись повідомлення 
rr.addEventListener('click', function(){
    alert("Режим змінено!");
    rr.textContent = 'Активно';
});
